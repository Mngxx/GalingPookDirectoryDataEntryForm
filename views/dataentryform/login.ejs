<% layout('layouts/boilerplate') %>
    <main class="container d-flex justify-content-center mt-5" data-aos="fade-left">
        <div class="card w-50 shadow">
            <div class="card-body p-5">
                <div class="mb-4 col-12 text-center">
                    <img src="/img/galingpook.png" alt="" class="img-fluid" style="height:200px;">
                </div>
                <h1 class="fs-2 mb-4 fw-bold text-center text-primary">
                    Welcome!
                </h1>
                <h1 class="fs-2 mb-5 fw-bold text-center text-primary">Galing Pook
                    Directory Data
                    Entry Form
                </h1>
                <form action="/" method="POST" class="validated-form" novalidate>
                    <div class="input-group mb-4">
                        <span class="input-group-text bg-primary text-white" id="userlabel">Username</span>
                        <input type="text" class="form-control" aria-label="Username" name="user"
                            aria-describedby="userlabel" autocomplete="on" required autofocus>
                    </div>
                    <div class="input-group mb-4">
                        <span class="input-group-text bg-primary text-white" id="passlabel">Password</span>
                        <input type="password" class="form-control" aria-label="Password" name="pass"
                            aria-describedby="passlabel" autocomplete="on" required>
                    </div>
                    <div class="mt-4 col-12 text-center">
                        <button type="submit" class="btn btn-outline-primary px-5 btn-lg">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </main>
    <script>
        window.top.document.title = "Login";
    </script>